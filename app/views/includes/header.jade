.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      a.navbar-brand(href="/") 百度新闻后台
    if user
      p.navbar-text.navbar-right
        span 欢迎您，#{user.name}
        span &nbsp;|&nbsp;
        a.navbar-link(href="/logout") 登出
    else
      p.navbar-text.navbar-right
        a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
        span &nbsp;|&nbsp;
        a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录
if user
  .navbar-default.sidebar(role="navigation")
    .sidebar-nav.nav-collapse
      ul#menu.nav.metismenu
        li
          a(aria-expanded="false", href="#") 菜单
          ul.nav.collapse(aria-expanded="false")
            li
              a(href="/admin/news/list") 查看所有
            li
              a(href="/admin/news/new") 上传新闻
  #header.container
    .page-header
      h1(style="") #{title}
        small 百度新闻后台
else
  .container(style="margin-top:51px")
    .page-header
      h1(style="") #{title}
        small 百度新闻后台
